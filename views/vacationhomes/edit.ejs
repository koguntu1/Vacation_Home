<%- include ("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center">Edit
			<%= vacationhome.name %>
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/vacationhomes/<%= vacationhome._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="vacationhome[name]" value="<%= vacationhome.name %>" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="vacationhome[image]" value="<%= vacationhome.image %>" placeholder="Image">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="vacationhome[price]" value="<%= vacationhome.price %>" min="0" step="0.01" required placeholder="Price">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="location" id="location" value="<%= vacationhome.location %>" placeholder="Location">
				</div> -->
				<div class="form-group">
					<input class="form-control" type="text" name="vacationhome[description]" value="<%= vacationhome.description %>" placeholder="Description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
				</div>
			</form>
			<a href="/vacationhomes">CANCEL</a>
		</div>
	</div>

	<%- include ("../partials/footer") %>