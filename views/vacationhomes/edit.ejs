<%- include ("../partials/header") %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= vacationhome.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/vacationhomes/<%= vacationhome._id %>?_method=PUT" method="POST">
                <div class="form-group">
					<label for="name">Name</label>
                    <input class="form-control" type="text" name="vacationhome[name]" value="<%= vacationhome.name %>">
                </div>
				<div class="form-group">
					<label for="image">Image</label>
                    <input class="form-control" type="text" name="vacationhome[image]" value="<%= vacationhome.image %>">
                </div>
				<div class="form-group">
					<label for="price">Price</label>
				  <input class="form-control" type="number" name="vacationhome[price]" value="<%= vacationhome.price %>"  min="0" step="0.01" required>
                </div>
				<div class="form-group">
    <label for="location">Location</label>
    <input class="form-control" type="text" name="location" id="location" value="<%= vacationhome.location %>">
</div>
				
                <div class="form-group">
					<label for="description">Description</label>
                    <input class="form-control" type="text" name="vacationhome[description]" value="<%= vacationhome.description %>">
                </div>
				 <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT!</button>
                </div>
				
            </form>
            <a href="/vacationhomes">CANCEL</a>
        </div>
    </div>

<%- include ("../partials/footer") %>