<%- include ("../partials/header") %>

 <!-- <div class="container"> -->
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Vacation Home!</h1>
             <p>These are the vacation homes from around the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/vacationhomes/new">Add New Vacation Home</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% vacationhomes.forEach(function(vacationhome){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src=" <%= vacationhome.image %> ">
                   <div class="caption">
                       <h4> <%= vacationhome.name %> </h4>
                   </div>
					 <p>
                       <a href="/vacationhomes/<%= vacationhome._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
<!-- </div> -->

<%- include ("../partials/footer") %>